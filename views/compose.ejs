<%- include('partials/header'); %>

    <h1>Compose</h1>

    <form class = "container-fluid" action="/compose" method="post">
        <div class="form-group">
            <label for="titleBox">Title</label>
            <input class="form-control" name="postTitle" type="text" id="titleBox">
        </div>
        <div class="form-group">
            <label for="compositionBox">Body</label>
            <textarea class="form-control" name="postBody" type="text" id="compositionBox" rows="6"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="publish-button">Publish</button>

    </form>

    <%- include('partials/footer'); %>